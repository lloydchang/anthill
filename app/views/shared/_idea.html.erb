      <div class="idea">
        <div class="image"><a href="<%=idea_path(idea) %>"><img src="<%= idea.images.first ? idea.images.first.image.url(:thumb) : nil%>" width="280px" height="187px"></a></div>
        <div class="g-clear-10"></div>
        <div class="title"><%= link_to idea.title, idea_path(idea) %></div>
        <div class="g-clear-10"></div>
        <div class="owner">by <%=link_to idea.user.full_name, profile_path(:id=>idea.user.id) %></div>
        <div class="icons">
        	<span>
        		<img src="/images/joiners.png"/> <%= (1 + idea.users.count).to_s %>
        	</span>
        	<span>
        		<img src="/images/like.png"/> <%= idea.likes %>
        	</span>
        </div>
      </div>
