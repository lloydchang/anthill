<% stylesheet "dashboard" %>
<div class="subheader">
    <div class="container_12">
        <div class="grid_8">
            <div class="h3">
                Discover Ideas
            </div>
            <div class="sub">
                See your co-workers ideas. Help them make it real.
            </div>
        </div>
        <div class="grid_4">
            <%= link_to "New Idea", new_idea_path() , :class=>"button" %>
        </div>
    </div>
</div>
<div class="content">
    <div class="container_12">
            <h3>Most popular</h3>

            <% @ideas.each do |idea| %>
              <div class="grid_4">
                <%= render :partial=>"shared/idea.html.erb", :locals=>{:idea=>idea} %>
              </div>
            <% end %>
            <div class="g-clear-20"></div>
    </div>
</div>